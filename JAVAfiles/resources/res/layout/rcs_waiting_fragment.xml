<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/primary_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"/>
    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/rcs_setup_progress"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:indeterminateOnly="true"
        android:indeterminateDrawable="@drawable/rcs_setup_progress"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="49dp"
        android:layout_weight="50">
        <RelativeLayout
            android:id="@+id/rcs_setup_timeout_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/rcs_setup_schedule_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_schedule_white_24dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/rcs_setup_schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rcs_setup_timeout_title"
                android:layout_alignTop="@+id/rcs_setup_schedule_icon"
                android:layout_toEndOf="@+id/rcs_setup_schedule_icon"
                style="@style/RcsSetupTextStyle.Timeout"/>
            <TextView
                android:id="@+id/rcs_setup_schedule_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rcs_setup_timeout_message"
                android:layout_below="@+id/rcs_setup_schedule_title"
                android:layout_toEndOf="@+id/rcs_setup_schedule_icon"
                style="@style/RcsSetupTextStyle.Timeout"/>
            <TextView
                android:id="@+id/rcs_setup_timeout_ack_button"
                android:layout_width="match_parent"
                android:text="@string/rcs_setup_timeout_acknowledgement_button_text"
                android:layout_alignParentBottom="true"
                style="@style/RcsSetupTimeoutButtonStyle"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
